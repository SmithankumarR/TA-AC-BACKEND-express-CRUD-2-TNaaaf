<%- include(`partials/header`) -%>
<h3 class="heading">Add your new book here...</h3>
<form action="/books" method="POST">
  <input type="text" name="title" placeholder="Add Title!" />
  <textarea name="summary" rows="10">Summary</textarea>
  <input type="number" name="pages" placeholder="Enter no. of pages" />
  <input
    type="text"
    name="publications"
    placeholder="Enter Year of publications"
  />
  <div class="select">
    <select name="author" id="author">
      <option value="">Choose an author</option>
      <% authors.forEach(author=>{ %>
      <option value="<%= author.id %>"><%= author.name %></option>
      <% }) %>
    </select>
    <select name="category" id="category">
      <option value="">Select any category</option>
      <% categories.forEach(category=>{ %>
      <option value="<%=category.id %>"><%= category.name%></option>
      <% }) %>
    </select>
  </div>
  <input type="text" name="cover_image" placeholder="Image url" />
  <input class="submit-btn" type="submit" value ="Add Book" />
</form>
<%- include(`partials/footer`) -%>
